<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App7.CssEstilos"
             StyleClass="contentpage">
    <StackLayout StyleClass="stacklayout">
        <Label Text="Estilos con Css" 
                   StyleClass="mainPageTitle" />
        <Entry Placeholder="Escribir nombre" 
                   StyleClass="mainPageTitle" />
        <Button x:Name="BotonNombre" Text="Css Button Nombre" 
                StyleClass="BotonNombre" />
        <Entry Placeholder="Escribir apellido" 
           StyleClass="mainPageTitle" />
        <Button x:Name="BotonApellido" Text="Css Button Apellido" 
            StyleClass="BotonApellido" />
    </StackLayout>
</ContentPage>